<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
<!-- WILL NOT CORRECTLY LINK TO CSS FILE. UNKOWN PROBLEM -->
    <!-- <link rel="stylesheet" href="../css/styles.css" type="text/css" /> -->
    <title>Your Address Book</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron text-center">
<!-- CREATE NEW CONTACT FORM -->
            <h1>Create a new contact here:</h1>
                <form class="form-group" action="/create_contact" method="post">
                    <div class="form-group">
                        <label for="contact_name">Name:</label>
                        <input id="contact_name" name="contact_name" type="text">
                    </div>
                    <div class="form-group">
                        <label for="contact_phone_number">Phone Number:</label>
                        <input id="contact_phone_number" name="contact_phone_number" type="tel">
                    </div>
                    <div class="form-group">
                        <label for="contact_address">Address:</label>
                        <input id="contact_address" name="contact_address" type="text">
                    </div>

                    <button class="btn btn-success" type="submit" style="margin-top:25px;">Create New Contact!</button>
                </form>
            </div>
<!-- CONTACT DISPLAY AREA -->
            {% if contacts is not empty %}
                <h1>List of Contacts:</h1>
                <ul>
                    {% for contact in contacts %}
                        <li>{{ contact.getName }}</li>
                            <ul>
                                <li>{{ contact.getPhoneNumber }}<a href="tel:{{ contact.getPhoneNumber }}"><span class="glyphicon glyphicon-phone-alt" style="margin-left:10px;"></span></a></li>
                                <li>{{ contact.getAddress }}</li>
                            </ul>
                    {% endfor %}
                </ul>
<!-- ERASE ALL CONTACTS BUTTON -->
                <form class="form-group" action="/delete_contacts" method="post">
                    <button class="btn btn-danger" type="submit" style="margin-top:25px;">Erase All Your Contacts!</button>
                </form>
            {% endif %}
    </div>
</body>
</html>
